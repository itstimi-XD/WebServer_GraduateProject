    <div class="card-columns">
        @foreach (var npc in _npcs)
        {
            <div class="align-self-center">
                <TeacherInfo _Npc="npc"></TeacherInfo>

                <br />
            </div>
        }

    </div>
</div>
</html>

<footer class="w3-text-sand py-5">
    <div class="container">
        <br /><br /><br /><br /><br /><br /><br /><br />
        <p class="mb-1">&copy; Metaverse Dance Community</p>

    </div>
</footer>

@code {
    List<Npc> _npcs;

    protected override async Task OnInitializedAsync()
    {
        _npcs = await BoardService.GetNpcsByMajorAsync("Vogue");
    }
}
